h1, body {
  font-family: 'Avenir Next', sans-serif;
}

.footer{
  background: #eee;
  margin-top: 20px;
  padding: 15px;
}

h3, h4{
  text-align: center;
  font-weight: 300;
}

.btn{
  color: #ffffff;
  background-color: #222;
  border-color: #000000;
  padding: 15px;
  display: inline-block;
  text-decoration: none;
  font-size: 14px;
}

.table-data{
  width: 100%;
}

.table-data td, .table-data th{
  text-align: center;
  padding: 10px 2px;
  background: #f5f5f5;
}

.table-data th{
  background: #2f2f2f;
  color: #fff;
}

.table-data tr{
  border-bottom: 1px solid #ccc;
}